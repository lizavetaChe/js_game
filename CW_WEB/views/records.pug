doctype html
html
    head
        meta(charset="utf-8")
        title Records
        link(rel="stylesheet", href='public/fontawesome-free-6.2.1-web/css/all.css')
        link(href='./public/stylesheets/style.css', rel="stylesheet")
    body
        script(src='./public/javascripts/records.js')
        div(id="TITLE", style= "center")
            i( class="fa-solid fa-snowflake", style="margin-right: 10px")
            p(style="text-decoration: underline dotted")="  LEGEND'S OF ICE CASTLE"
            i( class="fa-solid fa-snowflake", style="margin-left: 10px")
        h3(id="Rec", style='text-align: center')="Пьедестал почёта"
        table#user_table
            -for (let player of players)
                tr
                    td=`${player.nickname}`
                    td=`${Math.floor(player.score/1000)}`

        button(class='next', onclick="toGame()", style="top: 10px")='Попробовать снова'
        button(class='next', onclick="toLogin()", style="top: 10px")='Покинуть'

